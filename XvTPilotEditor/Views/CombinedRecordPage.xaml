<UserControl x:Class="XvTPilotEditor.Views.CombinedRecordPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XvTPilotEditor"
             xmlns:view="clr-namespace:XvTPilotEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Pilot Name"/>

            <Label Content="PltName:"/>
            <TextBox Text="{Binding PltPilotName}"/>

            <Label Content="Pl2Name:"/>
            <TextBox Text="{Binding Pl2PilotName}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal">
            <Label Content="Total Score"/>

            <Label Content="PltTotalScore:"/>
            <TextBox Text="{Binding PltTotalScore}"/>

            <Label Content="Pl2TotalScore:"/>
            <TextBox Text="{Binding Pl2TotalScore}"/>
        </StackPanel>
        
    </StackPanel>
</UserControl>
