<UserControl x:Class="XvTPilotEditor.Views.StatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XvTPilotEditor"
             xmlns:view="clr-namespace:XvTPilotEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <view:SummaryOfKills Margin="0,0,0,0"/>
        <view:PlayerKillsByRank Margin="0,10,0,0"/>
        <view:CraftKillsByType Margin="0,10,0,0"/>
        <view:AveragesPerMission Margin="0,10,0,0"/>
        <view:TotalLosses Margin="0,10,0,0"/>
        <view:TotalLossesByPlayerRank Margin="0,10,0,0"/>
    </StackPanel>
</UserControl>
