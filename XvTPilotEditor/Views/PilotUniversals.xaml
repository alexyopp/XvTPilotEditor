<UserControl x:Class="XvTPilotEditor.Views.PilotUniversals"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XvTPilotEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Content="Pilot Rating:"       Grid.Row="0" Grid.Column="0"/>
        <TextBox                             Grid.Row="0" Grid.Column="1" Text="{Binding PilotVM.PilotRating}"/>

        <Label Content="Name:"               Grid.Row="0" Grid.Column="2"/>
        <TextBox                             Grid.Row="0" Grid.Column="3" Text="{Binding PilotVM.Name}"/>

        <Label Content="Total Score:"        Grid.Row="1" Grid.Column="0"/>
        <TextBox                             Grid.Row="1" Grid.Column="1" Text="{Binding PilotVM.TotalScore}"/>

        <Label Content="Number of Missions:" Grid.Row="1" Grid.Column="2"/>
        <TextBox                             Grid.Row="1" Grid.Column="3" Text="{Binding PilotVM.NumMissions}"/>
    </Grid>
</UserControl>
