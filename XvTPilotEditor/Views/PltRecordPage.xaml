<UserControl x:Class="XvTPilotEditor.Views.PltRecordPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XvTPilotEditor"
             xmlns:view="clr-namespace:XvTPilotEditor.Views"
             xmlns:ctrl="clr-namespace:XvTPilotEditor.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ctrl:FilterableCompoundList ItemsSource="{Binding Fields}">
            <ctrl:FilterableCompoundList.ItemTemplate>
                <DataTemplate>
                    <ctrl:LabeledTextBox Label="{Binding Label}"
                                     Value="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Metadata="{Binding Metadata}"/>
                </DataTemplate>
            </ctrl:FilterableCompoundList.ItemTemplate>
        </ctrl:FilterableCompoundList>
    </Grid>
</UserControl>
