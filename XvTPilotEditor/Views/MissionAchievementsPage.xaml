<UserControl x:Class="XvTPilotEditor.Views.MissionAchievementsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:XvTPilotEditor"
             xmlns:view="clr-namespace:XvTPilotEditor.Views"
             xmlns:convert="clr-namespace:XvTPilotEditor.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label>Mission Achievements</Label>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="ID"   Grid.Column="0" HorizontalAlignment="Left"/>
            <Label Content="Evaluation"               Grid.Column="1" HorizontalAlignment="Center"/>
            <Label Content="Name"                  Grid.Column="2" HorizontalAlignment="Center"/>
            <Label Content="Score"                 Grid.Column="3" HorizontalAlignment="Center"/>
            <Label Content="PlayCount"                 Grid.Column="4" HorizontalAlignment="Center"/>
            <Label Content="????"                 Grid.Column="5" HorizontalAlignment="Center"/>

            <ItemsControl
                x:Name="MissionList"
                Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                ItemsSource="{Binding SingleplayerTrainingMissionData}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label      x:Name="ID"         Grid.Column="0" Content="{Binding Key}"/>
                            <Image      x:Name="Evaluation" Grid.Column="1" Source="/Assets/Gold.png"/>
                            <Label      x:Name="Name"       Grid.Column="2" Content="{Binding Value.Name}"/>
                            <TextBox    x:Name="Score"      Grid.Column="3" Text="{Binding Value.Score}"/>
                            <TextBox    x:Name="PlayCount"  Grid.Column="4" Text="{Binding Value.PlayCount}"/>
                            <TextBox    x:Name="Finish"     Grid.Column="5" Text="{Binding Value.Finish}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </StackPanel>
</UserControl>
